.headder
  .headder__box
    .headder__box__upper
      .headder__box__upper__logo
        = link_to "#", class: "link logo" do
          = image_tag("/assets/logo.png")
      .headder__box__upper__search
        = form_tag( "#", method: "get" ) do
          = text_field_tag(:name, '', class: 'search-form', placeholder: 'キーワードから探す')
          %button(type = "submit")
            .search-btn__icon
              = image_tag('/assets/icon-search 1.png', size: '20x20')
    .headder__box__btm
      %ul.headder__box__btm__left
        %li.headder__box__btm__left__category
          = link_to "#", class: " link category" do
            カテゴリー
        %li.headder__box__btm__left__brand
          = link_to "#", class: "link brand" do
            ブランド
      %ul.headder__box__btm__right        
        %li.headder__box__btm__right__login
          = link_to "#", class: "link login" do
            ログイン
        %li.headder__box__btm__right__signup
          = link_to "#", class: "link signup" do
            新規会員登録
